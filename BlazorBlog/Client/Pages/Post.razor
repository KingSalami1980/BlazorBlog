@page "/posts/{url}"
@inject BlazorBlog.Client.Services.IBlogService BlogService

<h3>@_post.Title</h3>

<div>
    @_post.Content
</div>

@code {
    private BlazorBlog.Shared.BlogPost _post;

    [Parameter]
    public string Url { get; set; }

    protected override void OnInitialized()
    {
        _post = BlogService.GetBlogPostByUrl(Url);
    }
}
